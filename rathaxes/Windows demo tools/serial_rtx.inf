[Version] 
Signature	="$Windows NT$"
DriverVer	=12/16/2007
Class		=Rathaxes Devices
ClassGUID	={E20808D9-5E08-4a2a-80A1-84DA0B2180AB}
CatalogFile	=serial_rtx.cat
Provider	=%MFGNAME%
